{
  "name": "basement",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack monorepo with TanStack Start and Fastify",
  "scripts": {
    "dev": "turbo run dev",
    "dev:api": "turbo run dev --filter=api",
    "dev:web": "turbo run dev --filter=web",
    "build": "turbo run build",
    "db:generate": "turbo run --filter api db:generate",
    "db:migrate": "turbo run --filter api db:migrate",
    "db:seed": "turbo run --filter api db:seed",
    "db:studio": "turbo run --filter api db:studio",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "prepare": "husky"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@dotenvx/dotenvx": "^1.38.0",
      "@sinclair/typebox": "^0.34.0",
      "@types/ms": "^2.1.0",
      "@types/node": "^24.10.0",
      "@types/react": "^19.2.0",
      "@types/react-dom": "^19.2.0",
      "better-auth": "^1.4.9",
      "ms": "^2.1.3",
      "react": "^19.2.0",
      "react-dom": "^19.2.0",
      "tailwindcss": "^4.0.6",
      "tsx": "^4.20.6",
      "typescript": "^5.9.3",
      "elysia": "1.4.19"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "turbo": "^2.6.1"
  },
  "packageManager": "bun@1.3.1",
  "resolutions": {
    "esbuild": "^0.27.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write"
    ],
    "*.{json,md}": [
      "biome format --write"
    ]
  }
}
